{% extends 'layout.njk' %}

{% block head %}
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <title>Portfolio - Martins</title>
{% endblock %}

{% block content %}
  <div class="wrapper">
    <h1>Aulas</h1>
  </div>
  <section class="cards">
    {% for card in cards %}
      <div class="card {{ "has_favorite" if card.isFavorite }}" id="{{ card.id }}">
        {% if card.isFavorite %}
          <div class="card--favorite">
              <span class="material-icons">star</span>
          </div>
        {% endif %}
        <div class="card_img">
          <img alt="{{ card.title }}" src="https://img.youtube.com/vi/{{ card.id }}/maxresdefault.jpg">          
        </div>
        <div class="card_content">
          <h1>{{ card.title }}</h1>
        </div>
        <div class="card_info">
          <p>{{ card.duration }}</p>
          <p class="info_price">{{ card.price }}</p>
        </div>
      </div>
    {% endfor %}
  </section>
  <script src="/scripts.js"></script>
{% endblock %}
