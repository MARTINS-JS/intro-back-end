{% extends 'layout.njk' %}

{% block content %}
  <div class="wrapper">
    <div class="img-container">
      <img alt="logo" src="{{ data.logo_url }}">
    </div>
    <h1>{{ data.name }}</h1>
    <p>{{ data.role }}</p>      
  </div>
  <div class="wrapper">
    <h2>Tecnologias</h2>
    <ul>
      {% for technology in data.technologies %}
        <li>{{ technology }}</li>
      {% endfor %}
    </ul>
  </div>
  <div class="links">
    {% for link in data.links %}
      <a target="_blank" href="{{ link.url }}">{{ link.name }}</a>
    {% endfor %}
  </div>
{% endblock %}
